<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybats-3-mapper.dtd">
  <mapper namespace="kr.co.work.mapper.WorkMapper">
  
   <select id="work_content" resultType="kr.co.work.vo.WorkVO">
    select * from work where id=#{param1}
   </select>
   
    <select id="getApply" resultType="String">
    select apply from work where id=#{param1}
    </select>
    
    <update id="apply">
     update work set apply=#{param1} where id=#{param2}
    </update>
    

  </mapper>